{
  "name": "nexus-shield",
  "description": "Nexus schema plugin to ease the creation of the authorization layer",
  "version": "0.0.0-semantic-release",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Emile Fugulin <code@efugulin.com>",
  "scripts": {
    "compile": "tsc -d",
    "coverage": "codecov",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts,.js src/",
    "posttest": "npm-run-all lint",
    "prepublishOnly": "npm-run-all compile",
    "release": "semantic-release",
    "test": "npm-run-all --parallel test:*",
    "test:jest": "NODE_ENV=test jest",
    "test:types": "tsc --noEmit",
    "example": "ts-node-dev --no-notify --transpileOnly --respawn example/server.ts"
  },
  "dependencies": {
    "object-hash": "^2.0.3",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "devDependencies": {
    "@nexus/schema": "0.14.0",
    "@types/jest": "25.2.3",
    "@types/node": "13.13.12",
    "@types/object-hash": "1.3.3",
    "@types/request-promise-native": "1.0.17",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "apollo-server": "2.14.3",
    "codecov": "3.7.0",
    "coveralls": "3.1.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-prettier": "3.1.3",
    "graphql": "15.1.0",
    "graphql-tools": "6.0.9",
    "husky": "4.2.5",
    "jest": "25.5.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "prettier-check": "2.0.0",
    "pretty-quick": "2.0.1",
    "rimraf": "3.0.2",
    "semantic-release": "17.0.8",
    "ts-jest": "25.5.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.5"
  },
  "peerDependencies": {
    "@nexus/schema": "^0.14.0",
    "graphql": "^14.5.0 || ^15.0.0"
  },
  "files": [
    "dist"
  ],
  "release": {
    "branch": "master"
  },
  "homepage": "https://github.com/sytten/nexus-shield",
  "repository": {
    "type": "git",
    "url": "https://github.com/sytten/nexus-shield.git"
  },
  "bugs": {
    "url": "https://github.com/sytten/nexus-shield/issues"
  },
  "keywords": [
    "nexus",
    "schema",
    "graphql",
    "permissions",
    "shield",
    "authorization",
    "rules"
  ],
  "license": "MIT"
}
